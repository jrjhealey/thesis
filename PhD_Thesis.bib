issn = {0099-2240},
journal = {Applied and Environmental Microbiology},
number = {10},
pages = {AEM.02739--17},
pmid = {29549100},
title = {{Characterization of Serratia proteamaculans strain AGR96X encoding an anti-feeding prophage (tailocin) with activity against grass grub ( Costelytra giveni ) and manuka beetle ( Pyronota spp.) larvae}},
url = {http://aem.asm.org/lookup/doi/10.1128/AEM.02739-17},
