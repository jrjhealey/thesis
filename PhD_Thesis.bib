file = {:Users/joehealey/Google Drive/Warwick/PhD/Nanosyringe Papers/a58a4e04bb05e1f8bab43e1e1a3848baedad54d408d8615841966e7a3be82670.pdf:pdf},
isbn = {0950-382X},
issn = {0950382X},
journal = {Molecular Microbiology},
pages = {213--231},
