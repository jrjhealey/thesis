file = {:Users/joehealey/Google Drive/Warwick/PhD/Bioinformatics/syw121.pdf:pdf},
issn = {1076836X},
journal = {Systematic Biology},
keywords = {Ancestral sequence reconstruction,Folding stability,Molecular adaptation,Phylogenetics,Protein evolution,Protein structure},
number = {6},
pages = {1054--1064},
pmid = {28057858},
title = {{ProtASR: An Evolutionary Framework for Ancestral Protein Reconstruction with Selection on Folding Stability}},
volume = {66},
year = {2017}
}
