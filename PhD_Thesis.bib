journal = {Frontiers in Cellular and Infection Microbiology},
keywords = {frontiers in cellular and,frontiersin,gliding motility,infection microbiology,org,pathogenesis,porphyromonas gingivalis,proteins,secretion,secretion, T9SS, Porphyromonas gingivalis, pathoge,t9ss,virulence,www},
number = {May},
pmid = {28603700},
title = {{The Type IX Secretion System (T9SS): Highlights and Recent Insights into Its Structure and Function}},
