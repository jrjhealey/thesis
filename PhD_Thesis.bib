keywords = {BL21(DE3),Comparative genomics,E. coli B,REL606,Similarity of E. coli B and K-12},
number = {4},
pages = {644--652},
pmid = {19786035},
publisher = {Elsevier Ltd},
title = {{Genome Sequences of Escherichia coli B strains REL606 and BL21(DE3)}},
